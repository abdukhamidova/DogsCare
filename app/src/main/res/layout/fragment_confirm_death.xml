<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/_40sdp"
    android:background="@color/app_background"
    tools:context=".FormConfirmDeathFragment"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_37sdp"
            android:textSize="@dimen/_16ssp"
            android:text="Imię zwierzęcia"
            android:layout_gravity="center"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_37sdp"
                android:textSize="@dimen/_16ssp"
                android:text="Data padnięcia*:"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editTextDeathDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:hint="Wybierz datę"
                android:focusable="false"
                android:clickable="true"
                android:inputType="date"
                android:layout_marginBottom="@dimen/_5sdp"/>
        </LinearLayout> <!--data-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_37sdp"
                android:textSize="@dimen/_16ssp"
                android:text="Czas padnięcia:"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editTextDeathTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:hint="Wybierz godzinę"
                android:focusable="false"
                android:clickable="true"
                android:inputType="time"
                android:layout_marginBottom="@dimen/_5sdp"/>
        </LinearLayout> <!--czas-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16ssp"
                android:text="Miejsce*:"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editTextPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_37sdp"
                android:hint="Miejsce padnięcia"
                android:gravity="top"
                android:overScrollMode="always"
                android:inputType="textMultiLine"/>
        </LinearLayout> <!--miejsce-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_16ssp"
                android:text="Przyczyna:"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editTextCause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_37sdp"
                android:hint="Przyczyna padnięcia (jeśli znana)"
                android:gravity="top"
                android:overScrollMode="always"
                android:inputType="textMultiLine"/>
        </LinearLayout> <!--przyczyna-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_16ssp"
                android:text="Uwagi dodatkowe:"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editTextAdditonalNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_37sdp"
                android:hint="Podaj dodatkowe istotne informacje"
                android:gravity="top"
                android:overScrollMode="always"
                android:inputType="textMultiLine"/>
        </LinearLayout> <!--note-->
    </LinearLayout>
</ScrollView>