<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormOtherFragment"
    tools:ignore="HardcodedText"
    android:layout_margin="@dimen/_20sdp"
    android:background="@color/app_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_37sdp"
        android:textSize="@dimen/_16ssp"
        android:text="Imię zwierzęcia"
        android:layout_gravity="center"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.2"
            android:textSize="@dimen/_16ssp"
            android:text="Data:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editTextArchiveDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.8"
            android:hint="Wybierz datę"
            android:focusable="false"
            android:clickable="true"
            android:inputType="date"
            android:layout_marginBottom="@dimen/_5sdp"/>
    </LinearLayout> <!--data-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_16ssp"
            android:text="Przczyna:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editTextCause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_37sdp"
            android:hint="Przyczyna archiwizacji"
            android:gravity="top"
            android:overScrollMode="always"
            android:inputType="textMultiLine"/>
    </LinearLayout> <!--przyczyna-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_16ssp"
            android:text="Dodatkowe uwagi:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editTextAdditonalNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_37sdp"
            android:hint="Wpisz dodatkowe istotne informacje"
            android:gravity="top"
            android:overScrollMode="always"
            android:inputType="textMultiLine"/>
    </LinearLayout> <!--note-->


</LinearLayout>