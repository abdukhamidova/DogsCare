<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDogFragment"
    android:orientation="vertical"
    android:layout_margin="@dimen/_20sdp"
    android:background="@color/app_background"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/imageViewPicture"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/profile_picture"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Zdjęcie"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.2"
            android:textSize="@dimen/_16ssp"
            android:text="Imię*:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.8"
            android:hint="Wpisz imię"
            android:layout_marginBottom="@dimen/_5sdp"/>
    </LinearLayout> <!--imie-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.6"
            android:textSize="@dimen/_16ssp"
            android:text="Data przyjęcia:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editTextDateArrival"
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.8"
            android:hint="Wybierz datę"
            android:focusable="false"
            android:clickable="true"
            android:inputType="date"
            android:layout_marginBottom="@dimen/_5sdp"/>
    </LinearLayout> <!--data_przyjecia-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.2"
            android:textSize="@dimen/_16ssp"
            android:text="Chip:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editTextChip"
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.8"
            android:hint="Nr chip"
            android:layout_marginBottom="@dimen/_5sdp"/>
    </LinearLayout> <!--chip-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.2"
            android:textSize="@dimen/_16ssp"
            android:text="Rasa:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editTextBreed"
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.8"
            android:hint="Podaj rasę"
            android:layout_marginBottom="@dimen/_5sdp"/>
    </LinearLayout> <!--rasa-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.2"
            android:textSize="@dimen/_16ssp"
            android:text="Płeć:"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/editTextGender"
            android:layout_width="0dp"
            android:layout_height="@dimen/_37sdp"
            android:layout_weight="0.8"
            android:hint="Podaj płeć"
            android:layout_marginBottom="@dimen/_5sdp"/>
    </LinearLayout> <!--plec-->


</LinearLayout>